{% extends 'layout/template.twig' %}

{% block description %}{% endblock %}

{% block title %} Ajout d'un utilisateur {% endblock %}

{% block content %}
<h1> Ajout d'un utilisateur</h1>
<form class="" action="{{ url('admin!create') }}" method="post">
  <ul>
       <li>
         <label for="first_name">Prénom</label>
         <input id="first_name" type="text" name="first_name" required>
       </li>
       <li>
           <label for="last_name">Nom</label>
           <input id="last_name" type="text" name="last_name" required>
       </li>
       <li>
         <label for="email">Email</label>
         <input id="email" type="email" name="email" required>
       </li>
       <li>
         <label for="pass">Mot de passe</label>
         <input id="pass" type="password" name="pass" autocomplete="off" required>
       </li>
       <li>
         <label for="status">Statut</label>
         <input id="status" name="status" required>
       </li>
     </ul>

     <ul>
       <li>
           <input type="reset" value="Reset">
           <input type="submit">
       </li>
   </ul>
</form>
<a href="{{ url('admin') }}">Panneau de contrôle</a>
{% endblock %}
