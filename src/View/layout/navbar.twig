<header>
  <nav>
      <ul>
      {% if session.users.status is defined and session.users.status == 'admin' %}
          <li>
              <a href="{{ url('home') }}" title="Page d'accueil">Accueil</a>
          </li>
          <li>
              <a href="{{ url('post') }}" title="Tout les chapitres">Chapitres</a>
          </li>
          <li>
              <a href="{{ url('connexion') }}" title="Administration">Administration</a>
          </li>
          <li>Admin connecté</li>
          <li>
            <a href="{{ url('connexion!logout') }}" title="Déconnexion">Déconnexion</a>
          </li>

          <!-- Connexion d'un membre -->
          {% elseif session.users.status is defined and session.users.status == 'member' %}
          <li>
              <a href="{{ url('home') }}" title="Page d'accueil">Accueil</a>
          </li>
          <li>
              <a href="{{ url('post') }}" title="Tout les chapitres">Chapitres</a>
          </li>
          <li>
              <a href="{{ url('contact') }}" title="Formulaire de contact">Contact</a>
          </li>
          <li>
              <a href="{{ url('connexion!useredit', {'id': session.users.id }) }}" title="Page personnelle">Page personnelle</a>
          </li>
          <li>
            Utilisateur connecté: {{ session.users.nickname }}
          </li>
          <li>
            <a href="{{ url('connexion!logout') }}" title="Déconnexion">Déconnexion</a>
          </li>

          <!-- Visiteur -->
          {% elseif session.users.status is defined and session.users.status == 'visitor' %}
          <li>
              <a href="{{ url('home') }}" title="Page d'accueil">Accueil</a>
          </li>
          <li>
              <a href="{{ url('post') }}" title="Tout les chapitres">Chapitres</a>
          </li>
          <li>
              <a href="{{ url('contact') }}" title="Formulaire de contact">Contact</a>
          </li>
          <li title="Le compte doit être validé par un administrateur.">
            Utilisateur non vérifié: {{ session.users.nickname }}
          </li>
          <li>
              <a href="{{ url('connexion!logout') }}" title="Déconnexion">Déconnexion</a>
          </li>
          <!-- Non connecté -->
          {% else %}
          <li>
              <a href="{{ url('home') }}" title="Page d'accueil">Accueil</a>
          </li>
          <li>
              <a href="{{ url('post') }}" title="Tout les chapitres">Chapitres</a>
          </li>
          <li>
              <a href="{{ url('contact') }}" title="Formulaire de contact">Contact</a>
          </li>
          <li>
              <a href="{{ url('connexion') }}" title="Connexion / Inscription">Connexion / Inscription</a>
          </li>
      {% endif %}

      </ul>
  </nav>
</header>
