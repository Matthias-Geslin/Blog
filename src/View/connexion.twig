{% extends "layout/template.twig" %}

{% block description %}

{% endblock %}

{% block content %}
    <ul>
        <li><h1><label for="radio" class="sign-in">Connexion au site</label></h1></li>
    </ul>

    <input type="radio" class="radio1 hide" id="radio" name="radio" checked>

    <form class="form" action="{{ url('connexion!launch') }}" method="post">
        <fieldset>
            <legend><i class="fas fa-unlock-alt"></i> Connexion à l'Administration</legend>
            <ul>
                <li>
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" placeholder="Insert your email" required>
                </li>
                <li>
                    <label for="pass">Password</label>
                    <input id="pass" name="pass" type="password" placeholder="Insert your password" autocomplete="off" required>
                </li>
                <li>
                    <button type="submit">Login</button>
                </li>
            </ul>
        </fieldset>
    </form>

    <ul>
        <li><h1><label for="radio" class="sign-in">Inscription</label></h1></li>
    </ul>
    <form class="form" action="{{ url('admin!create') }}" method="post">
        <fieldset>
            <legend><i class="fas fa-fingerprint"></i> Inscription </legend>
            <ul>
                <li>
                    <label for="first_name">Prénom</label>
                    <input id="first_name" name="first_name" type="text" placeholder="Prénom" required>
                </li>
                <li>
                    <label for="last_name">Nom</label>
                    <input id="last_name" name="last_name" type="text" placeholder="Nom" required>
                </li>
                <li>
                    <label for="nickname">Pseudo affiché</label>
                    <input id="nickname" name="nickname" type="text" placeholder="Pseudo" required>
                </li>
                <li>
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" placeholder="Votre adresse email" required>
                </li>
                <li>
                    <label for="pass">Mot de passe</label>
                    <input id="pass" name="pass" type="password" placeholder="Mot de passe" autocomplete="off" required>
                </li>
                <li>
                    <button type="submit" name="signup">S'inscrire</button>
                </li>
            </ul>
        </fieldset>
    </form>
{% endblock %}
