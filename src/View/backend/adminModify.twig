{% extends 'layout/template.twig' %}

{% block description %}{% endblock %}

{% block title %} Modifications de: {{ admin.nickname }} {% endblock %}

{% block content %}
<h1> Modification de: {{ admin.nickname }}</h1>
<form action="{{ url('admin!modify', {'id': admin.id }) }}" method="post">
  <ul>
       <li>
         <label for="first_name">Prénom</label>
         <input id="first_name" type="text" name="first_name" value="{{ admin.first_name }}" required>
       </li>
       <li>
           <label for="last_name">Nom</label>
           <input id="last_name" type="text" name="last_name" value="{{ admin.last_name }}" required>
       </li>
       <li>
           <label for="nickname">Surnom Affiché</label>
           <input id="nickname" type="text" name="nickname" value="{{ admin.nickname }}" required>
       </li>
       <li>
         <label for="email">Email</label>
         <input id="email" type="email" name="email" value="{{ admin.email }}" required>
       </li>
       <li>
         <label for="pass">Mot de passe</label>
         <input id="pass" type="password" name="pass" value="{{ admin.pass }}">
       </li>
       <li>
         <label for="status">Statut</label>
         <select id="status" name="status" required>
          <option value="{{ admin.status }}" {{ selected }}>{{ admin.status }}</option>
          <option value="admin">Administrateur</option>
          <option value="member">Membre du site</option>
          <option value="visitor">Visiteur</option>
         </select>
       </li>
     </ul>

     <ul>
       <li>
           <input type="reset" value="Reset">
           <input type="submit" value="Update">
       </li>
   </ul>
</form>
<a href="{{ url('admin') }}">Panneau de contrôle</a>
{% endblock %}
